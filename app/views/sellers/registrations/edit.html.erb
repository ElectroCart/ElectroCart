<% content_for :title, "Create Profile | Electro Cart" %>
<div class="container" style="padding-top: 20px;">
  <div class="row">
    <div class="col-md-12 no-pad-xs">
      <div class="row login_signup_heading" style="padding:0px;margin:0px;">
        <div class="col-md-12">
          <center><h3 class="heading_text">Create Profile</h3></center>
        </div>
      </div>
        <div class="jumbotron" style="padding-top:1em;padding-bottom:1em; background-color: rgba(48,110,255,0.7); border-radius:0 0 1em 1em;">
        <div class="row">
          <div class="col-md-12 login_signup_panel">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |form| %>
            <% if @seller.errors.any? %>
              <div class="form-group alert alert-error alert-block" id="error_explanation">
                <button type="button" class="close" data-dismiss="alert">x</button>
                <h4 class="heading_error"><%= pluralize(@seller.errors.count, "error") %> prohibited this Profile from being saved:</h4>
                <% @seller.errors.full_messages.each do |msg| %>
                    <h5 class="heading_error"><%= msg%></h5>
                <% end %>
              </div>
            <%end%>

            <div class="row">
              <div class="col-xs-12 col-md-4">
                <div class="form-group" style="margin-top:0.5em;">
                  <div class="row">
                    <center>
                      <%= image_tag('user.png', {id: "residential_image", style: "width:12em;height:12em;",class: "my_img img-responsive img-thumbnail img-circle",alt: "User Profile Image"}) %>
                      <input data-toggle="modal" data-target="#addPhoto" class="btn btn-block btn-info" type="button" value="Add Avatar" style="width: 50%;margin-top:0.5em;">
                    </center>
                  </div>
                </div>
              </div>
              <div class="col-xs-12 col-md-8">
                <div class="row">
                  <div class="col-md-12"><center><h3 class="heading_text" style="font-size:1.1em;">Personal Detail</h3></center></div>
                  <div class="col-xs-12 col-md-6" style="margin-top:-1em;">
                    <%= form.label :first_name, class: "login_signup_label" %>
                    <%= form.text_field :first_name ,class: 'form-control my_text_field', required: true%>
                    <%= form.label :last_name, class: "login_signup_label"%>
                    <%= form.text_field :last_name, class: 'my_text_field form-control', required: true%>
                    <%= form.label :gender, "Gender", class:"label" %><br />
                    <%= form.select :gender, options_for_select([ "Male", "Female" ]),{prompt: "Select Gender"}, {class: 'form-control', style:"font-size: 1em;"}%>

                  </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12"><center><h3 class="heading_text" style="font-size:1.1em;">Contact Detail</h3></center></div>
                  <div class="col-xs-12 col-md-6" style="margin-top:-1em;">
                    <%= form.label :primary_cell, "Primary Mobile Number", class: "login_signup_label" %>
                    <%= form.number_field :primary_cell, class: 'form-control my_text_field', required: true%>
                    <%= form.label :secondary_cell, "Landline Number", class: "login_signup_label"%>
                    <%= form.number_field :secondary_cell, class: 'my_text_field form-control'%>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12"><center><h3 class="heading_text" style="font-size:1.1em;">Address Detail</h3></center></div>

                    <div class="col-xs-12 col-md-6" style="margin-top:-1em;">
                      <%= form.label :residential_address, "Residential Address", class: "login_signup_label"%>
                      <%= form.text_area :residential_address, class: 'my_text_field form-control', required: true%>
                      <%= form.label :shop_address, "Shop Address", class: "login_signup_label"%>
                      <%= form.text_area :shop_address, class: 'my_text_field form-control', required: true%>
                    </div>
                </div>
              </div>
            </div>
            <div class="field">
              <%= form.label :email %><br />
              <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>




            <br>
            <div class="col-md-5"></div>
            <div class="col-md-2">
              <div class="row">
                <div class="actions">
                  <%= form.submit  "Save" ,class: 'btn btn-block btn-outline btn-primary active_button', style: "font-weight:bold;font-family: 'Merriweather', serif; color:#FFFFFF" %>
                </div>
              </div>
            </div>
            <div class="col-md-5"></div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
